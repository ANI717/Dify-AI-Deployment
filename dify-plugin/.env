SERVER_PORT=5002
SERVER_KEY=dify-plugin

DIFY_INNER_API_URL=http://host.docker.internal:5001
DIFY_INNER_API_KEY=dify-api

# Plugin Remote Installing/Debugging
PLUGIN_REMOTE_INSTALLING_ENABLED=true
PLUGIN_REMOTE_INSTALLING_HOST=0.0.0.0
PLUGIN_REMOTE_INSTALLING_PORT=5003

# Serverless connector URL (required)
DIFY_PLUGIN_SERVERLESS_CONNECTOR_URL=http://localhost:5002

# Force temp writes to /temp
TMPDIR=/tmp

# DB (pgvector)
DB_USERNAME=appuser
DB_PASSWORD=strongpassword
DB_HOST=host.docker.internal
DB_PORT=5432
DB_DATABASE=appdb

# Redis
REDIS_HOST=host.docker.internal
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://:@host.docker.internal:6379/0

# Vector store
VECTOR_STORE=pgvector

# Storage configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/tmp
# STORAGE_TYPE=azure-blob
# AZURE_BLOB_ACCOUNT_NAME=your-account
# AZURE_BLOB_ACCOUNT_KEY=your-account-key
# AZURE_BLOB_CONTAINER_NAME=your-container
# AZURE_BLOB_ACCOUNT_URL=https://your-account.blob.core.windows.net

# LLM provider keys
# OPENAI_API_KEY=...
# ANTHROPIC_API_KEY=...

# Sandbox execution service reachable on host; adjust as needed
CODE_EXECUTION_ENDPOINT=http://host.docker.internal:8194
CODE_EXECUTION_API_KEY=dify-sandbox

# Setup for plugin development; adjust as needed
PLUGIN_HOST=http://host.docker.internal:5002
